<%layout('layouts/boilerplate')%>
    <h1>ALL CAMPGROUNDS</h1>
    <a href="campgrounds/new"  class="btn btn-secondary mb-3 ms-5">ADD CAMPGROUND</a>
    <ul>
        <% for( let c of campgrounds ) { %>
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                  <div class="col-md-4">
                    <img src=<%= c.image %> class="img-fluid rounded-start" >
                  </div>
                  <div class="col-md-8">
                    <div class="card-body">
                      <h5 class="card-title"><%= c.title %></h5>
                      <p class="card-text"><%= c.description %></p>
                      <a href="/campgrounds/<%= c.id %>" class="btn btn-primary">View Campground</a>
                    </div>
                  </div>
                </div>
              </div>
        <% } %>
    </ul>