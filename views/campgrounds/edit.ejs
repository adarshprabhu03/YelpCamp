<%layout('layouts/boilerplate')%>
    <div class="d-flex justify-content-center ">
        <div class="card  text-center mb-3" style="width:80vh">
            <div class="card-body">
                <h5 class="card-title">ADD YOUR CAMPGROUND</h5>
                <div class="card-body">
                    <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
                        <div class="me-7 pt-5">
                            <div class="mb-3">
                                <label for="formGroupExampleInput" class="form-label">ENTER CAMPGROUND NAME</label>
                                <input type="text" class="form-control" value="<%=campground.title %>" name="title" id="formGroupExampleInput"
                                    placeholder="Campground Name">
                            </div>
                            <div class="mb-3">
                                <label for="formGroupExampleInput2" class="form-label">ENTER CAMPGROUND LOCATION</label>
                                <input type="text" name="location" class="form-control" value="<%=campground.location %>" id="formGroupExampleInput2"
                                    placeholder="Campground Location">
                            </div>
                            <div class="mb-3">
                                <label for="formGroupExampleInput" class="form-label">IMAGE URL</label>
                                <input type="text" class="form-control" name="image" value="<%=campground.image %>" id="formGroupExampleInput"
                                    placeholder="Campground Image">
                            </div>
                            <div class="input-group mb-3">
                                <span class="input-group-text">$</span>
                                <input type="text" class="form-control" name="price" value="<%=campground.price %>"
                                    aria-label="Amount (to the nearest dollar)" placeholder="Price">
                                <span class="input-group-text">.00</span>
                            </div>
                            <div class="input-group mb-3">
                                <span class="input-group-text">Description</span>
                                <textarea id="des" class="form-control" aria-label="With textarea" name="description"
                                    placeholder="Add Description"><%=campground.description %></textarea>
                            </div>
                            <button class="btn btn-success pt-1 mt-70px">UPDATE</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>




